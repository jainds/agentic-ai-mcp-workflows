FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Build argument for agent type
ARG AGENT_TYPE
ENV AGENT_TYPE=${AGENT_TYPE}

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent code
COPY agents/ ./agents/
COPY scripts/ ./scripts/

# Create startup script
RUN echo '#!/bin/bash\n\
case "$AGENT_TYPE" in\n\
    "claims")\n\
        python -c "from agents.domain.claims_agent import ClaimsAgent; ClaimsAgent().run()"\n\
        ;;\n\
    "support")\n\
        python -c "from agents.domain.support_agent import SupportAgent; SupportAgent().run()"\n\
        ;;\n\
    "policy")\n\
        python -c "from agents.domain.policy_agent import PolicyAgent; PolicyAgent().run()"\n\
        ;;\n\
    "data")\n\
        python -c "from agents.technical.data_agent import DataAgent; DataAgent().run()"\n\
        ;;\n\
    "notification")\n\
        python -c "from agents.technical.notification_agent import NotificationAgent; NotificationAgent().run()"\n\
        ;;\n\
    "integration")\n\
        python -c "from agents.technical.integration_agent import IntegrationAgent; IntegrationAgent().run()"\n\
        ;;\n\
    *)\n\
        echo "Unknown agent type: $AGENT_TYPE"\n\
        exit 1\n\
        ;;\n\
esac' > /app/start-agent.sh && chmod +x /app/start-agent.sh

# Expose port
EXPOSE 8000 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the agent
CMD ["/app/start-agent.sh"] 