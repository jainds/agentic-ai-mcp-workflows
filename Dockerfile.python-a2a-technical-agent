# Python A2A Technical Agent Dockerfile
FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-agents.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-agents.txt

# Copy agent source code
COPY agents/ ./agents/
COPY services/shared/ ./services/shared/

# Set Python path
ENV PYTHONPATH=/app:$PYTHONPATH

# Environment variables for technical agent
ENV AGENT_PORT=8002
ENV AGENT_TYPE=data
ENV AGENT_HOST=0.0.0.0

# Create health check endpoint script
RUN echo '#!/bin/bash\ncurl -f http://localhost:${AGENT_PORT}/health || exit 1' > /app/healthcheck.sh \
    && chmod +x /app/healthcheck.sh

# Expose technical agent ports
EXPOSE 8002 8003 8004

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD /app/healthcheck.sh

# Start the technical agent in A2A mode for proper agent-to-agent communication
CMD ["python", "-m", "agents.technical.python_a2a_technical_agent", "--port", "8002", "--agent-type", "data", "--mode", "a2a"] 